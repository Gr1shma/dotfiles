#!/bin/sh

bat_rem () {
  read -r bat_status </sys/class/power_supply/BAT1/status
  battery_level=`acpi -b | grep -P -o '[0-9]+(?=%)'`
  echo 'ba1'
  if [[ $battery_level -le 20 && "$bat_status" = "Discharging" ]]; then
    echo 'batt'
    notify-send -u critical "Battery low" "Battery level is ${battery_level}%!"
  fi
}
while true
do
  sleep 1 &
  wait && {
    [ $((sec % 60)) -eq 0 ] && bat_rem
  }
done
