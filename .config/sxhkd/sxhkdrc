# terminal emulator
super + Return
 	st

# program launcher
super + space
 	dmenu_run

# wifi connection
super + i
	wifi_rofi

# power options form rofi
super + p
	power_menu

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# Wallpaper
super + w
	set_wallpaper

super + shift + d
	set_wallpaper ~/pix/wallpaper/Mountain-Forest.jpg

super + shift + n
	set_wallpaper ~/pix/wallpaper/night_bg.jpg

# Apps
# Launch Apps
super + shift + {f,w,e}
	{thunar,firefox,code}

# Screenshot
ctrl + shift + s
	maim --select | xclip -selection clipboard -t image/png

super + shift + s 
	maim | tee ~/pix/ss/$(date +%s).png | xclip -sel c -t image/png

# Brighness control
XF86MonBrightness{Up,Down}
	brightnessctl s{ +10%, 10%-}
	
XF86Audio{RaiseVolume,LowerVolume}
	pamixer -{i,d,t} 5; kill -34 $(cat ~/.cache/pidofbar)
	
# Music control
XF86Audio{Next,Prev,Play,Stop}
	mpc {next,prev,toggle,stop}

# Emoji Menu
super + shift + a
	rofi -modi emoji -show emoji