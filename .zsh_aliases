alias dly='echo "### $(date "+%y-%m-%d-%a")\n- sleep-hr:\n- study-hr:\n-general todo:\n- study todo:\n- read:\n- idea: \n- thought: " >> ~/dox/sec-brain/journal/daily/$(date "+%y-%m-%d-%a").md && helix ~/dox/sec-brain/journal/daily/$(date "+%y-%m-%d-%a").md'
